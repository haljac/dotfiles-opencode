{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": ["docs/*.md", "AGENTS.md"],
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    }
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git branch*": "allow",
      "git show*": "allow",
      "gh pr view*": "allow",
      "gh pr list*": "allow",
      "gh pr status*": "allow",
      "gh pr checks*": "allow",
      "gh issue view*": "allow",
      "gh issue list*": "allow",
      "gh issue status*": "allow",
      "gh repo view*": "allow",
      "gh run view*": "allow",
      "gh run list*": "allow",
      "cat *": "allow",
      "ls *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "wc *": "allow",
      "find *": "allow",
      "which *": "allow",
      "pwd": "allow",
      "env": "allow",
      "go test*": "allow",
      "go build*": "allow",
      "go run*": "allow",
      "go vet*": "allow",
      "go fmt*": "allow",
      "go mod tidy*": "allow",
      "go mod download*": "allow",
      "go list*": "allow",
      "go version*": "allow",
      "golangci-lint*": "allow",
      "staticcheck*": "allow",
      "python -m pytest*": "allow",
      "pytest*": "allow",
      "python -m mypy*": "allow",
      "mypy*": "allow",
      "python -m ruff*": "allow",
      "ruff*": "allow",
      "python -m black --check*": "allow",
      "black --check*": "allow",
      "uv *": "allow",
      "pip list*": "allow",
      "pip show*": "allow",
      "python --version*": "allow",
      "npm test*": "allow",
      "npm run test*": "allow",
      "npm run lint*": "allow",
      "npm run build*": "allow",
      "npm run typecheck*": "allow",
      "npm run check*": "allow",
      "npm list*": "allow",
      "npm --version*": "allow",
      "npx tsc*": "allow",
      "npx eslint*": "allow",
      "npx prettier --check*": "allow",
      "pnpm test*": "allow",
      "pnpm run test*": "allow",
      "pnpm run lint*": "allow",
      "pnpm run build*": "allow",
      "pnpm run typecheck*": "allow",
      "pnpm list*": "allow",
      "bun test*": "allow",
      "bun run test*": "allow",
      "bun run lint*": "allow",
      "bun run build*": "allow",
      "bun run typecheck*": "allow",
      "make": "allow",
      "make *": "allow"
    }
  }
}
